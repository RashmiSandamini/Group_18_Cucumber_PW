{
  "path": "/blog",
  "blogPostLink": {
    "locator": "xpath=//a[contains(text(), '${title}')]",
    "description": "Blog post link"
  },
  "blogMenu": {
    "locator": "xpath=//ul[@class='navbar-nav horizontal']//span[@class='title'][normalize-space()='Blog']",
    "description": "Blog menu item in the navigation bar"
  },
  "commentInput": {
    "locator": "xpath=//textarea[@id='comment']",
    "description": "Comment input field"
  },
  "submitCommentButton": {
    "locator": "xpath=//button[@id='submit-comment']",
    "description": "Submit comment button"
  },
  "replyButton": {
    "locator": "xpath=//button[contains(@class, 'reply')]",
    "description": "Reply button"
  },
  "replyInput": {
    "locator": "xpath=//textarea[@id='reply']",
    "description": "Reply input field"
  },
  "submitReplyButton": {
    "locator": "xpath=//button[@id='submit-reply']",
    "description": "Submit reply button"
  }
}
